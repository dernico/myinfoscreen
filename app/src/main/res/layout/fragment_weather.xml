<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".components.weather.WeatherFragment">


    <TextView
        android:id="@+id/frag_weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frag_weather_text_size_big"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:text="Wetter ist super"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/frag_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="@dimen/frag_weather_text_size_big"
                android:text="temp: 30" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frag_weather_temp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frag_weather_text_size_small"
                    android:text="min: 12"
                    />


                <TextView
                    android:id="@+id/frag_weather_temp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frag_weather_text_size_small"
                    android:text="max: 30"
                    />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/frag_weather_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/frag_weather_text_size_big"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:text="clouds 10"
            />
    </LinearLayout>


</LinearLayout>